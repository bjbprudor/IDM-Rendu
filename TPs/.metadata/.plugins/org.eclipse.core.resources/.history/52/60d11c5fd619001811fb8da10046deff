	public void GetAllVideos()
	{
		List<Object> res = null;
		try
		{
			for(Media media : videoGen.getMedias())
			{
				if(media instanceof VideoSeq) { res.add(media); }
			}
		}
		catch(Exception ex)
		{
			System.out.println(ex.getMessage());
		}	
	}
	
